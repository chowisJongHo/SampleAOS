<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3E3E3E">

        <ImageView
            android:id="@+id/item_wifi_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="50dp"
            android:src="@drawable/wifi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/item_wifi_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_wifi_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIFI-NameHere"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_state_string"
                android:textColor="#727272"
                android:textSize="15sp" />
        </LinearLayout>

        <Switch
            android:id="@+id/item_wifi_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <View
            android:layout_toStartOf="@+id/item_wifi_switch"
            android:layout_centerVertical="true"
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:layout_marginEnd="26dp"
            android:background="#727272" />
    </RelativeLayout>
</layout>
