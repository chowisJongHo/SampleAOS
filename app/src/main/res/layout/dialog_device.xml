<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dialog_background">

        <include
            android:id="@+id/dialog_header"
            layout="@layout/dialog_header"
            app:dialogTitle="@{@string/device_dialog_title}" />

        <TextView
            android:id="@+id/edit_title"
            android:layout_width="510dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="84dp"
            android:text="@string/device_option_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_header" />

        <EditText
            android:inputType="textCapCharacters"
            android:id="@+id/dialog_edit_text"
            android:layout_width="510dp"
            android:layout_height="77dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="84dp"
            android:background="@drawable/custom_edit_text"
            android:paddingStart="24dp"
            android:textColor="@color/black"
            android:paddingEnd="24dp"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_title" />

        <LinearLayout
            android:id="@+id/wb_linear"
            android:layout_width="510dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/file_upload_button"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_edit_text">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/configuration_button_string"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/download_cloud" />
        </LinearLayout>

        <Button
            android:id="@+id/dialog_submit_button"
            android:layout_width="287dp"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="48dp"
            android:backgroundTint="#5DD3B7"
            android:text="@string/submit_button_string"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wb_linear" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
