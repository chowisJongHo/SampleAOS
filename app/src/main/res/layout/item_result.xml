<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginBottom="9dp"
            android:elevation="3dp"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:weightSum="4">

            <TextView
                android:id="@+id/item_result_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/button_mint_color"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/item_result_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/item_result_index"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#FF0000" />

            <TextView
                android:textSize="16sp"
                android:id="@+id/item_result_image_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/button_mint_color" />
        </LinearLayout>
    </LinearLayout>
</layout>
