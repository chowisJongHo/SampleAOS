<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_dialog_background">

        <include
            android:id="@+id/dialog_header"
            layout="@layout/dialog_header"
            app:dialogTitle="@{@string/skin_group_string}" />

        <TextView
            android:layout_width="510dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="@string/skin_content_title"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_header" />

        <Button
            android:id="@+id/dialog_capture_button"
            android:layout_width="287dp"
            android:layout_height="64dp"
            android:layout_marginTop="93dp"
            android:backgroundTint="@color/button_mint_color"
            android:text="@string/image_capture_string"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_header" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_capture_manual_button"
            android:layout_width="287dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/dismiss_button_background"
            android:text="@string/manual_input_string"
            android:textAllCaps="true"
            android:textColor="@color/button_mint_color"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_capture_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
