        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/measurement_viewpager"
            android:layout_width="650dp"
            android:layout_height="700dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/measurement_tab"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/measurement_viewpager"
            app:layout_constraintStart_toStartOf="@+id/measurement_viewpager"
            app:layout_constraintTop_toBottomOf="@+id/measurement_viewpager"
            app:tabBackground="@drawable/indicator_tab_dot"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"
            app:tabMinWidth="40dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/measurement_proceed_button"
            android:layout_width="288dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/measurement_button_background"
            android:text="@string/measurement_proceed_string"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/measurement_tab" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>