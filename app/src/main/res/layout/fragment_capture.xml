<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_background_color"
        tools:context=".fragment.CaptureFragment">

        <RelativeLayout
            android:id="@+id/frag_capture_relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="102dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.chowis.sdk.newcnd.CNDPlayer
                android:id="@+id/frag_capture_cnd_player"
                android:layout_width="466dp"
                android:layout_height="350dp"
                android:background="@drawable/cnd_player_background" />

            <ImageView
                android:id="@+id/frag_capture_image"
                android:layout_width="466dp"
                android:layout_height="350dp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/frag_capture_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/frag_capture_image"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="9dp"
                android:background="@android:color/transparent"
                android:src="@drawable/close_button_img"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/frag_capture_button"
            android:layout_width="287dp"
            android:layout_height="64dp"
            android:layout_marginTop="85dp"
            android:backgroundTint="@color/button_mint_color"
            app:layout_constraintEnd_toEndOf="@+id/frag_capture_relative"
            app:layout_constraintStart_toStartOf="@+id/frag_capture_relative"
            app:layout_constraintTop_toBottomOf="@+id/frag_capture_relative" />

        <Button
            android:id="@+id/capture_done_button"
            android:layout_width="287dp"
            android:layout_height="64dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/button_gray_color"
            app:layout_constraintEnd_toEndOf="@+id/frag_capture_relative"
            app:layout_constraintStart_toStartOf="@+id/frag_capture_relative"
            app:layout_constraintTop_toBottomOf="@+id/frag_capture_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
